<div class="card-body">
    <h5 class="card-title">Bán <span>| @ViewBag.SaleDay</span></h5>

    <div class="d-flex align-items-center">
        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
            <i class="bi bi-cart"></i>
        </div>
        <div class="ps-3">

            <h6>@ViewBag.SaleNumbers</h6>
            <span class="@ViewBag.SaleColor small pt-1 fw-bold">@ViewBag.SalePercent %</span> <span class="text-muted small pt-2 ps-1">@ViewBag.SaleStatus</span>

        </div>
    </div>
</div>

