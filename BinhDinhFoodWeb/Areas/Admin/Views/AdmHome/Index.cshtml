@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pagetitle">
    <h1> Trang tổng quan </h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"> <a asp-action="Index"> Trang chủ </a> </li>
            <li class="breadcrumb-item active"> Trang tổng quan </li>
        </ol>
    </nav>
</div> <!-- Tiêu đề Trang Cuối -->

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">

                <!-- Sales Card -->
                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card sales-card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6> Bộ lọc </h6>
                                </li>

                                <li> <a class="dropdown-item" asp-action="GetSale" asp-route-saleOrder="today" data-ajax="true" data-ajax-update="#SaleNumbers"> Hôm nay </a> </li>
                                <li> <a class="dropdown-item" asp-action="GetSale" asp-route-saleOrder="thisMonth" data-ajax="true" data-ajax-update="#SaleNumbers"> Tháng này </a> </li>
                                <li> <a class="dropdown-item" asp-action="GetSale" asp-route-saleOrder="thisYear" data-ajax="true" data-ajax-update="#SaleNumbers"> Năm này </a> </li>
                            </ul>
                        </div>
                        <div id="SaleNumbers">
                            @await Component.InvokeAsync("SaleComponent", "today")
                        </div>

                    </div>
                </div><!-- End Sales Card -->


                <div class="col-xxl-4 col-md-6">
                    <div class="card info-card revenue-card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6> Bộ lọc </h6>
                                </li>

                                <li> <a class="dropdown-item" asp-action="GetRevenue" data-ajax="true" data-ajax-update="#RevenueNumbers" asp-route-revenueOrder="today"> Hôm nay </a> </li>
                                <li> <a class="dropdown-item" asp-action="GetRevenue" data-ajax="true" data-ajax-update="#RevenueNumbers" asp-route-revenueOrder="thisMonth"> Tháng này </a> </li>
                                <li> <a class="dropdown-item" asp-action="GetRevenue" data-ajax="true" data-ajax-update="#RevenueNumbers" asp-route-revenueOrder="thisYear"> Năm nay </a> </li>
                            </ul>
                        </div>
                        <div id="RevenueNumbers">
                            @await Component.InvokeAsync("RevenueComponent", "today")

                        </div>
                    </div>
                </div>
                <!-- Customers Card -->
                <div class="col-xxl-4 col-xl-12">

                    <div class="card info-card customers-card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6> Bộ lọc </h6>
                                </li>

                                <li> <a class="dropdown-item" asp-action="GetCustomer" data-ajax="true" data-ajax-update="#CustomerNumbers" asp-route-customerOrder="today"> Hôm nay </a> </li>
                                <li> <a class="dropdown-item" asp-action="GetCustomer" data-ajax="true" data-ajax-update="#CustomerNumbers" asp-route-customerOrder="thisMonth"> Tháng này </a> </li>
                                <li> <a class="dropdown-item" asp-action="GetCustomer" data-ajax="true" data-ajax-update="#CustomerNumbers" asp-route-customerOrder="thisYear"> Năm nay </a> </li>
                            </ul>
                        </div>
                        <div id="CustomerNumbers">
                            @await Component.InvokeAsync("CustomerComponent", "today")
                        </div>

                    </div>

                </div><!-- End Customers Card -->
                <!-- Reports -->
                <div class="col-12">
                    <div class="card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6> Bộ lọc </h6>
                                </li>

                                <li> <a class="dropdown-item" > Hôm nay </a> </li>
                                <li> <a class="dropdown-item" > Tháng này </a> </li>
                                <li> <a class="dropdown-item" > Năm nay </a> </li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Báo cáo <span> / Hàng ngày</span></h5>

                            <!-- Line Chart -->
                            <div id="reportsChart"></div>
                              
                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                    new ApexCharts(document.querySelector("#reportsChart"), {
                                        series: [{
                                            name: "Doanh thu",
                                            data: @ViewBag.saleChart
                                        }, {
                                            name: "Lợi nhuận",
                                            data: @ViewBag.revenueChart
                                        }, {
                                            name: "Khách hàng" ,
                                            data: @ViewBag.customerChart
                                        }],
                                        chart: {
                                            height: 350,
                                            type: 'area',
                                            toolbar: {
                                                show: false
                                            },
                                        },
                                        markers: {
                                            size: 4
                                        },
                                        colors: ['#4154f1', '#2eca6a', '#ff771d'],
                                        fill: {
                                            type: "gradient",
                                            gradient: {
                                                shadeIntensity: 1,
                                                opacityFrom: 0.3,
                                                opacityTo: 0.4,
                                                stops: [0, 90, 100]
                                            }
                                        },
                                        dataLabels: {
                                            enabled: false
                                        },
                                        stroke: {
                                            curve: 'smooth',
                                            width: 2
                                        },
                                        xaxis: {
                                            type: 'datetime',
                                            categories: ["2018-09-19T00:00:00.000Z", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z"]
                                        },
                                        tooltip: {
                                            x: {
                                                format: 'dd/MM/yy HH:mm'
                                            },
                                        }
                                    }).render();
                                });
                            </script>
                            <!-- End Line Chart -->

                        </div>

                    </div>
                </div><!-- End Reports -->
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Bộ lọc</h6>
                                </li>

                                <li><a class="dropdown-item">Hôm nay</a></li>
                                <li><a class="dropdown-item">Tháng này</a></li>
                                <li><a class="dropdown-item">Năm nay</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Giao dịch gần đây <span>| Hôm nay</span></h5>

                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Khách hàng</th>
                                        <th scope="col">Sản phẩm</th>
                                        <th scope="col">Giá</th>
                                        <th scope="col">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @await Component.InvokeAsync("OrderRecordComponent")
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->
            </div>
        </div><!-- End Left side columns -->
        <!-- Right side columns -->
        <div class="col-lg-4">

            <!-- Recent Activity -->
            <div class="card">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6> Bộ lọc</h6>
                        </li>

                        <li><a asp-action="GetRecentActivity" asp-route-order="today" data-ajax="true" data-ajax-update="#recent-activity" class="dropdown-item">Hôm nay</a></li>
                        <li><a asp-action="GetRecentActivity" asp-route-order="month" data-ajax="true" data-ajax-update="#recent-activity" class="dropdown-item">Tháng này</a></li>
                        <li><a asp-action="GetRecentActivity" asp-route-order="year" data-ajax="true" data-ajax-update="#recent-activity" class="dropdown-item">Năm nay</a></li>
                    </ul>
                </div>

                <div class="card-body" id="recent-activity">
                    @await Component.InvokeAsync("ActivityComponent", "today")

                </div>
            </div><!-- End Recent Activity -->
            <!-- Website Traffic -->
            <div class="card">
                <div class="filter">
                    <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                            <h6>Bộ lọc</h6>
                        </li>

                        <li><a class="dropdown-item" >Hôm nay</a></li>
                        <li><a class="dropdown-item" >Tháng này</a></li>
                        <li><a class="dropdown-item" >Năm nay</a></li>
                    </ul>
                </div>

                <div class="card-body pb-0">
                    <h5 class="card-title">Quảng cáo <span>| Hôm nay</span></h5>

                    <div id="trafficChart" style="min-height: 400px;" class="echart"></div>

                    <script>
                        document.addEventListener("DOMContentLoaded", () => {
                            echarts.init(document.querySelector("#trafficChart")).setOption({
                                tooltip: {
                                    trigger: 'item'
                                },
                                legend: {
                                    top: '5%',
                                    left: 'center'
                                },
                                series: [{
                                    name: 'Access From',
                                    type: 'pie',
                                    radius: ['40%', '70%'],
                                    avoidLabelOverlap: false,
                                    label: {
                                        show: false,
                                        position: 'center'
                                    },
                                    emphasis: {
                                        label: {
                                            show: true,
                                            fontSize: '18',
                                            fontWeight: 'bold'
                                        }
                                    },
                                    labelLine: {
                                        show: false
                                    },
                                    data: [{
                                        value: 23,
                                        name: 'Công cụ tìm kiếm'
                                    },
                                    {
                                        value: 456,
                                        name: 'Tin nhắn'
                                    },
                                    {
                                        value: 64,
                                        name: 'Email'
                                    },
                                    {
                                        value: 356,
                                        name: 'Quảng cáo'
                                    },
                                    {
                                        value: 534,
                                        name: 'Quảng cáo tiktok'
                                    }
                                    ]
                                }]
                            });
                        });
                    </script>

                </div>
            </div><!-- End Website Traffic -->

        </div><!-- End Right side columns -->

    </div>
</section>
