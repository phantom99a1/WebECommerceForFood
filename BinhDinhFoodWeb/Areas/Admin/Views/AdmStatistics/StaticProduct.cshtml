@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Báo cáo và phân tích khinh doanh</li>
        </ol>
    </nav>
</div><!-- End Page Title -->



<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">

                <div class="col-12">
                    <div class="card top-selling overflow-auto">

                        <div class="filter">
                            <a class="icon" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Lọc</h6>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="AdmStatistics"
                                       asp-action="RevenueStructure"
                                       asp-route-option="2022"
                                       data-ajax="true" data-ajax-update="#newchart">2022</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="AdmStatistics"
                                       asp-action="RevenueStructure"
                                       asp-route-option="2021"
                                       data-ajax="true" data-ajax-update="#newchart">2021</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="AdmStatistics"
                                       asp-action="RevenueStructure"
                                       asp-route-option="2020"
                                       data-ajax="true" data-ajax-update="#Static-Product-Amount">2020</a>
                                </li>
                            </ul>
                        </div>

                        <div class="card-body pb-0">
                            <h5 class="card-title">Phân tích sản phẩm <span>|</span></h5>
                            <form asp-action="StaticProduct" method="get">
                                    <div class="col-md-4">
                                <select name="option" class="form-select">
                                    <option selected value=@ViewData["option"]>@ViewData["optionName"]</option>
                                    <option value=0>Doanh số</option>
                                    <option value=1>Doanh thu</option>
                                </select>
                                <select class="form-select" name="product" asp-items="@ViewData["listProduct"] as SelectList"></select>
                                    </div>
                                <input type="submit" value="Thống kê" class="btn btn-primary" />
                            </form>
                            <canvas id="newchart"></canvas>
