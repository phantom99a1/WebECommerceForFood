<aside class="col-lg-3">
    <div class="widget search_blog d-none d-sm-none d-md-none d-lg-block">
        <div class="form-group">
            <input type="text" name="search" id="search_blog" class="form-control" placeholder="Search..">
            <button type="submit"><i class="ti-search"></i><span class="sr-only">Search</span></button>
        </div>
    </div>
    <!-- /widget -->
    <div class="widget">
        <div class="widget-title">
            <h4>Bài viết gần đây</h4>
        </div>
        <ul class="comments-list">
            @foreach(var item in Model)
            {
                <li>
                    <div class="alignleft">
                        <a asp-action="BlogPost" asp-route-id="@item.BlogId"><img src="~/Content/img/products/@item.BlogImage" alt=""></a>
                    </div>
                    <small>@item.BlogDateCreated</small>
                    <h3><asp-action ="BlogPost" asp-route-id="@item.BlogId" title="">@item.BlogName ...</asp-action></h3>
                </li>

            }
        </ul>
    </div>
    <!-- /widget -->
    <div class="widget">
        <div class="widget-title">
            <h4>Categories</h4>
        </div>
        <ul class="cats">
            <li><a href="#">Food <span>(12)</span></a></li>
            <li><a href="#">Places to visit <span>(21)</span></a></li>
            <li><a href="#">New Places <span>(44)</span></a></li>
            <li><a href="#">Suggestions and guides <span>(31)</span></a></li>
        </ul>
    </div>
    <!-- /widget -->
    <div class="widget">
        <div class="widget-title">
            <h4>Popular Tags</h4>
        </div>
        <div class="tags">
            <a href="#">Food</a>
            <a href="#">Bars</a>
            <a href="#">Cooktails</a>
            <a href="#">Shops</a>
            <a href="#">Best Offers</a>
            <a href="#">Transports</a>
            <a href="#">Restaurants</a>
        </div>
    </div>
    <!-- /widget -->
</aside>
<!-- /aside -->