}

<div class="container margin_30">
    <div class="row justify-content-center text-center">

        <div class="col-lg-7">
            <div class="card">
                <div class="card-body" >
                    <h5 class="card-title">Danh sách yêu thích của bạn</h5>
                    <!-- Table with hoverable rows -->
                    <div id="favorite-list">
                        @await Component.InvokeAsync("FavComponent", @Model)
                    </div>
                </div>
            </div>
            <!-- Table with stripped rows -->

        </div>
    </div>
    <!-- /row -->
</div>
<!-- /container -->
